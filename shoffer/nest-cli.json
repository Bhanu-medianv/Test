{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "assets": {
      "type": "library",
      "root": "libs/assets",
      "entryFile": "index",
      "sourceRoot": "libs/assets/src",
      "compilerOptions": {
        "tsConfigPath": "libs/assets/tsconfig.lib.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "cars": {
      "type": "application",
      "root": "apps/cars",
      "entryFile": "main",
      "sourceRoot": "apps/cars/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cars/tsconfig.app.json"
      }
    },
    "customers": {
      "type": "application",
      "root": "apps/customers",
      "entryFile": "main",
      "sourceRoot": "apps/customers/src",
      "compilerOptions": {
        "tsConfigPath": "apps/customers/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true
  }
}